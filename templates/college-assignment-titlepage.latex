% TITLE PAGE %
\begin{titlepage}
  \centering

  % space before title
  \hspace{0pt}
  \vspace{0.4 \textheight}

  % title
  { \huge \bfseries $title$ } \\ [0.8 cm]

  % subtitle
  $if(subtitle)$
  \textsc{\Large $subtitle$} \\ [0.8cm]
  $endif$

  % more space
  \vspace{1.5cm}

  \begin{minipage}{0.3 \textwidth} % authors
    \begin{flushleft} \large
      \emph{\theauthorname} \\ [0.4 cm]
      $for(author)$$author$$sep$\newline $endfor$
    \end{flushleft}
  \end{minipage}
  \begin{minipage}{0.3 \textwidth} % authors' credentials
    \begin{flushright} \large
      \emph{\thecredentialname} \\ [0.4 cm]
      $for(credential)$$credential$$sep$\newline $endfor$
    \end{flushright}
  \end{minipage}

  % date
  \vfill
  {\large $date$}
\end{titlepage}

