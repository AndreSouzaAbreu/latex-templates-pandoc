\def \lang{$lang$}
$else$
\def \lang{portuguese}
$endif$

$if(margin)$
\def \marginsettings{$margin$}
$else$
\def \marginsettings{margin=2cm,top=3cm}
$endif$

\usepackage[utf8]{inputenc}
